public class VisualApproach {
	
	private RavensProblem problem;
	private int tempAns;
	
	public VisualApproach(RavensProblem problem){
		this.problem = problem;
	}
	
	public int visualApproach() {
		return -1;
	}
	
	
	
	public int TestSolve() {
		RavensFigure figureA = problem.getFigures().get("A");
		BufferedImage figAImage = null; 
		
		try {
			Image figureAImage = ImageIO.read(new File(figureA.getVisual()));
		} catch (Exception ex) {
			ex.printStackTrace();
		}
		
		for(int i = 0 ; i < figureAImage.getWidth() ; i++) {

			for(int j = 0 ; j < figureAImage.getHeight() ; j++) {

			int thisPixel = figureAImage.getRGB(i,j);

			}
		}
		
		return -1;
		
	}
	

}
